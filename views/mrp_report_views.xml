<odoo>
    <!-- Menú para Reportes MRP -->
    <menuitem id="menu_mrp_reports_extension" 
              name="Reportes MRP" 
              parent="mrp.menu_mrp_root" 
              sequence="10" />

    <!-- Acción para generar el reporte PDF -->
    <record id="action_mrp_report_pdf" model="ir.actions.report">
        <field name="name">Reporte de Eficiencia</field>
        <field name="model">mrp.production</field>
        <field name="report_name">mrp_reports_extension.report_mrp_efficiency</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
    </record>

    <!-- Enlace del Menú al Reporte PDF -->
    <menuitem id="menu_mrp_report_efficiency_pdf" 
              name="Eficiencia de Producción (PDF)" 
              parent="menu_mrp_reports_extension" 
              action="action_mrp_report_pdf" 
              sequence="20" />
</odoo>
