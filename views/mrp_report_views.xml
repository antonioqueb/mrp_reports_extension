<odoo>
    <record id="view_mrp_product_efficiency_report_tree" model="ir.ui.view">
        <field name="name">mrp.product.efficiency.report.tree</field>
        <field name="model">mrp.product.efficiency.report</field>
        <field name="arch" type="xml">
            <tree string="Reporte de Eficiencia por Producto">
                <field name="product_id"/>
                <field name="total_quantity"/>
                <field name="total_planned_duration"/>
                <field name="total_real_duration"/>
                <field name="average_efficiency"/>
            </tree>
        </field>
    </record>

    <record id="action_mrp_product_efficiency_report" model="ir.actions.act_window">
        <field name="name">Reporte de Eficiencia por Producto</field>
        <field name="res_model">mrp.product.efficiency.report</field>
        <field name="view_mode">tree"/>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_mrp_product_efficiency_report" 
              name="Reporte de Eficiencia por Producto" 
              parent="mrp.menu_mrp_root" 
              action="action_mrp_product_efficiency_report" 
              sequence="30"/>
</odoo>
